# Server-side secrets (DO NOT SHARE)
ENCRYPTION_KEY= # Base64 encoded 32-byte key (generate with crypto.randomBytes(32).toString('base64'))
SUPABASE_SERVICE_ROLE_KEY=ey... # Required for RBAC/RLS monitoring
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_OUTPUT_TOKENS=600

# Email (Resend)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=no-reply@mindbridge.health
RESEND_FROM_NAME=MindBridge

# Client-side public variables
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=ey...
NEXT_PUBLIC_APP_URL=https://www.mindbridge.health
NEXT_PUBLIC_BETTER_AUTH_URL=https://www.mindbridge.health

# Better Auth
BETTER_AUTH_SECRET= # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=https://www.mindbridge.health
BETTER_AUTH_DATABASE_URL= # PostgreSQL connection string (can use DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Clinician portal access gating
PORTAL_ACCESS_CODE= # Comma-separated codes (share only with purchasers)
PORTAL_ACCESS_SECRET= # Secret used to sign portal access cookie (can reuse BETTER_AUTH_SECRET)


